<%- include('../layout/head', {title: title}); %>


  <body>
    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-content-navbar">
      <div class="layout-container">
        <!-- Menu -->
        <%- include('../layout/sidebar'); %>
          <!-- / Menu -->

          <!-- Layout container -->
          <div class="layout-page">
            <!-- Navbar -->

            <%- include ('../layout/navbar'); %>

              <!-- / Navbar -->

              <!-- Content wrapper -->
              <div class="content-wrapper">
                <!-- Content -->

                <div class="container-xxl flex-grow-1 container-p-y">


                  <!-- Responsive Table -->
                  <div class="card">
                    <h5 class="card-header">Danh Sách Review</h5>
                    <div class="card-body">
                      <div class="mt-2">
                        <a href="/admin/review/create" class="btn btn-primary text-white me-2">Thêm Review</a>
                      </div>
                    </div>

                    <div class="table-responsive text-nowrap">
                      <table class="table table-hover">
                        <thead>
                          <tr class="text-nowrap">
                            <th>#</th>
                            <th>Email</th>
                            <th>Họ Tên</th>
                            <th>Avatar</th>
                            <th>SDT</th>
                            <th>Đánh Giá</th>
                            <th>Trạng Thái</th>
                            <th></th>
                          </tr>
                        </thead>
                        <tbody>
                          <% count=0 %>
                            <% for( review of reviews) { %>
                              <tr>
                                <th scope="row">
                                  <%= count++ %>
                                </th>
                                <td>
                                  <%= review?.email %>
                                </td>
                                <td>
                                  <%= review?.fullname %>
                                </td>
                                <td>
                                  <ul class="list-unstyled users-list m-0 avatar-group d-flex align-items-center">
                                    <li data-bs-toggle="tooltip" data-popup="tooltip-custom" data-bs-placement="top"
                                      class="avatar avatar-xs pull-up"
                                      title="<%= review?.fullname%> ">
                                      <img src="/static/images/<%= review?.avatar %> " alt="avatar"
                                        class="rounded-circle" />
                                    </li>
                                  </ul>
                                </td>
                                <td>
                                  <%= review?.phone_number %>
                                </td>
                                <td>
                                  <%= review?.star %>
                                </td>
                                <td>
                                  <%= review?.is_hidded ? "Ẩn" : "Hiện" %>
                                </td>

                                <td>
                                  <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow"
                                      data-bs-toggle="dropdown">
                                      <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                      <a class="dropdown-item" href="/admin/review/edit/<%= review?.id %> "><i
                                          class="bx bx-edit-alt me-1"></i> Edit</a>
                                      <a class="dropdown-item" href="/admin/review/delete/<%= review?.id %> "><i
                                          class="bx bx-trash me-1"></i>
                                        Delete</a>

                                    </div>
                                  </div>
                                </td>
                              </tr>
                              <% } %>

                        </tbody>

                      </table>

                    </div>
                    <div class="demo-inline-spacing" style="margin-left: 1.5rem">
                      <nav aria-label="Page navigation">
                        <ul class="pagination">
                          <% if (page > 1) { %>
                            <li class="page-item prev">
                              <a class="page-link" href="/admin/review?page=<%= page-1 %>"><i
                                  class="tf-icon bx bx-chevrons-left"></i></a>
                            </li>
                           
                          <% } %>
                          <% for( x in pages ) { %>
                            <li class="page-item <%=x==page ?'active' : '' %>">
                              <a class="page-link" href="/admin/review?page=<%= x %>"><%= x %> </a>
                            </li>
                          <% } %>
                          
                          <% if (page < totalPage) { %>
                          <li class="page-item next">
                            <a class="page-link" href="/admin/review?page=<%= page+1 %>"><i
                                class="tf-icon bx bx-chevrons-right"></i></a>
                          </li>
                          <% } %>
                        </ul>
                      </nav>
                    </div>
                  </div>
                  <!--/ Responsive Table -->

                </div>
                <!-- / Content -->

                <!-- Footer -->
                <%- include('../layout/footer'); %>
                  <%- include('../layout/script'); %>