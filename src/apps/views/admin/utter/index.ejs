<%- include('../layout/head', {title: title}); %>


  <body>
    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-content-navbar">
      <div class="layout-container">
        <!-- Menu -->
        <%- include('../layout/sidebar'); %>
          <!-- / Menu -->

          <!-- Layout container -->
          <div class="layout-page">
            <!-- Navbar -->

            <%- include ('../layout/navbar'); %>

              <!-- / Navbar -->

              <!-- Content wrapper -->
              <div class="content-wrapper">
                <!-- Content -->

                <div class="container-xxl flex-grow-1 container-p-y">


                  <!-- Responsive Table -->
                  <div class="card">
                    <h5 class="card-header">Danh Sách Câu Trả Lời</h5>
                    <div class="card-body">
                      <div class="mt-2">
                        <a href="/admin/utter/create" class="btn btn-primary text-white me-2">Thêm Câu Trả Lời</a>
                      </div>
                    </div>

                    <div class="table-responsive text-nowrap">
                      <table class="table table-hover">
                        <thead>
                          <tr class="text-nowrap">
                            <th>#</th>
                            <th>Tên</th>
                            <th>slug</th>
                            <th>Mô tả</th>
                            <th>Người tạo</th>
                            <th>Ngày tạo</th>
                            <th>Ngày cập nhập</th>
                            <th></th>
                          </tr>
                        </thead>
                        <tbody>
                          <% count=0 %>
                            <% for( utter of utters) { %>
                              <tr>
                                <th scope="row">
                                  <%= count++ %>
                                </th>
                                <td>
                                  <%= utter?.name %>
                                </td>
                                <td>
                                  <%= utter?.slug %>
                                </td>
                                <td>
                                  <%= utter?.description %>
                                </td>
                                <td>
                                  <%= utter?.user_id?.first_name + " " + utter?.user_id?.last_name%>
                                </td>
                                <td>
                                  <%= new Date(utter?.createdAt).toLocaleDateString("vi-VN") %>
                                </td>
                                <td>
                                  <%= new Date(utter?.updatedAt).toLocaleDateString("vi-VN") %>
                                </td>

                                <td>
                                  <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow"
                                      data-bs-toggle="dropdown">
                                      <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                      <a class="dropdown-item" href="/admin/utter/edit/<%= utter?.id %> "><i
                                          class="bx bx-edit-alt me-1"></i> Edit</a>
                                      <a class="dropdown-item" href="/admin/utter/delete/<%= utter?.id %> "><i
                                          class="bx bx-trash me-1"></i>
                                        Delete</a>

                                    </div>
                                  </div>
                                </td>
                              </tr>
                              <% } %>

                        </tbody>

                      </table>

                    </div>
                    <div class="demo-inline-spacing" style="margin-left: 1.5rem">
                      <nav aria-label="Page navigation">
                        <ul class="pagination">
                          <% if (page > 1) { %>
                            <li class="page-item prev">
                              <a class="page-link" href="/admin/utter?page=<%= page-1 %>"><i
                                  class="tf-icon bx bx-chevrons-left"></i></a>
                            </li>
                           
                          <% } %>
                          <% for( x in pages ) { %>
                            <li class="page-item <%=x==page ?'active' : '' %>">
                              <a class="page-link" href="/admin/utter?page=<%= x %>"><%= x %> </a>
                            </li>
                          <% } %>
                          
                          <% if (page < totalPage) { %>
                          <li class="page-item next">
                            <a class="page-link" href="/admin/utter?page=<%= page+1 %>"><i
                                class="tf-icon bx bx-chevrons-right"></i></a>
                          </li>
                          <% } %>
                        </ul>
                      </nav>
                    </div>
                  </div>
                  <!--/ Responsive Table -->

                </div>
                <!-- / Content -->

                <!-- Footer -->
                <%- include('../layout/footer'); %>
                  <%- include('../layout/script'); %>