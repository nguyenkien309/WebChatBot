<%- include('../layout/head', {title: title}); %>


  <body>
    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-content-navbar">
      <div class="layout-container">
        <!-- Menu -->
        <%- include('../layout/sidebar'); %>
          <!-- / Menu -->

          <!-- Layout container -->
          <div class="layout-page">
            <!-- Navbar -->

            <%- include ('../layout/navbar'); %>

              <!-- / Navbar -->

              <!-- Content wrapper -->
              <div class="content-wrapper">
                <!-- Content -->

                <div class="container-xxl flex-grow-1 container-p-y">


                  <!-- Responsive Table -->
                  <div class="card">
                    <h5 class="card-header">Danh Sách Người Dùng</h5>
                    <div class="card-body">
                      <div class="mt-2">
                        <a href="/admin/user/create" class="btn btn-primary text-white me-2">Thêm Người Dùng</a>
                      </div>
                    </div>

                    <div class="table-responsive text-nowrap">
                      <table class="table table-hover">
                        <thead>
                          <tr class="text-nowrap">
                            <th>#</th>
                            <th>Email</th>
                            <th>Họ Tên</th>
                            <th>Avatar</th>
                            <th>Địa Chỉ</th>
                            <th>Giới Tính</th>
                            <th>SDT</th>
                            <th>API Key</th>
                            <th>role</th>
                            <th>Trạng Thái</th>
                            <th></th>
                          </tr>
                        </thead>
                        <tbody>
                          <% count=0 %>
                            <% for( user of users) { %>
                              <tr>
                                <th scope="row">
                                  <%= count++ %>
                                </th>
                                <td>
                                  <%= user?.email %>
                                </td>
                                <td>
                                  <%= user?.first_name + ' ' + user?.last_name %>
                                </td>
                                <td>
                                  <ul class="list-unstyled users-list m-0 avatar-group d-flex align-items-center">
                                    <li data-bs-toggle="tooltip" data-popup="tooltip-custom" data-bs-placement="top"
                                      class="avatar avatar-xs pull-up"
                                      title="<%= user?.first_name + ' ' + user?.last_name %> ">
                                      <img src="/static/images/<%= user?.avatar %> " alt="avatar"
                                        class="rounded-circle" />
                                    </li>
                                  </ul>
                                </td>
                                <td>
                                  <%= user?.address %>
                                </td>
                                <td>
                                  <%= user?.gender %>
                                </td>
                                <td>
                                  <%= user?.phone_number %>
                                </td>
                                <td>
                                  <%= user?.api_key %>
                                </td>
                                <td><span class="badge bg-label-primary me-1">
                                    <%= user?.role %>
                                  </span></td>
                                <td>
                                  <%= user?.is_deleted ? "Dừng hoạt động" : "Hoạt động" %>
                                </td>

                                <td>
                                  <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow"
                                      data-bs-toggle="dropdown">
                                      <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                      <a class="dropdown-item" href="/admin/user/edit/<%= user?.id %> "><i
                                          class="bx bx-edit-alt me-1"></i> Edit</a>
                                      <a class="dropdown-item" href="/admin/user/delete/<%= user?.id %> "><i
                                          class="bx bx-trash me-1"></i>
                                        Delete</a>

                                    </div>
                                  </div>
                                </td>
                              </tr>
                              <% } %>

                        </tbody>

                      </table>

                    </div>
                   
                  </div>
                  <!--/ Responsive Table -->

                </div>
                <!-- / Content -->

                <!-- Footer -->
                <%- include('../layout/footer'); %>
                  <%- include('../layout/script'); %>